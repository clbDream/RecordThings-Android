<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:gravity="center_vertical">

            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/layout_linggan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dp_20"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="@color/colorItem">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="灵感"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/linggan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold" />
            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/layout_daiban"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dp_20"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="@color/colorItem">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待办"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/daiban_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold" />

            </com.hjq.shape.layout.ShapeLinearLayout>
        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/layout_sport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dp_20"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="@color/colorItem">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动记录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/sport_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold" />
            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/all_bills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dp_20"
                android:visibility="visible"
                app:shape_radius="@dimen/dp_5"
                app:shape_solidColor="@color/colorItem">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部账单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </com.hjq.shape.layout.ShapeLinearLayout>
        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/add_inspiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="添加灵感"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_8"
            app:shape_solidColor="@color/btn_bg" />

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/add_daiban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="添加待办"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_8"
            app:shape_solidColor="@color/btn_bg" />

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/add_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="记录运动"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_8"
            app:shape_solidColor="@color/btn_bg" />

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/add_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="记录账单"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_8"
            app:shape_solidColor="@color/btn_bg" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_add"
        android:text="发布"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:theme="@style/Theme.MaterialComponents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>